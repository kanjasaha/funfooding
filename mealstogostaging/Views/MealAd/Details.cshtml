@model MealsToGo.ViewModels.MealAdViewModel

@{
    ViewBag.Title = "Details";
}

<div class="cont-main">
    <h1>Meal Ad - Details</h1>

    <div class="cont">
        <div class="cont-rit">
            <ul class="gen-form">
                <li>
                    <p>Meal Ad - Details</p>

                    @Html.DisplayFor(x => x.MealItemName)
                </li>
                <li>
                    <p>Schedule</p>

                    <table id="tblMealAdSchedules">

                          @for (int i = 0; i < (Model.MealAdSchedules.Count/2); i++)
                       
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.MealAdSchedules[i].PickUpStartDateTime) &nbsp; &nbsp;
                                    @Html.DisplayFor(model => model.MealAdSchedules[i].PickUpEndDateTime)
                                </td>
                            </tr>
                        }


                    </table>


                </li>
                <li>
                    <p>Max Order</p>
                    @Html.DisplayFor(model => model.MaxOrders, new { @class = "gen-ftb" })
                </li>
                <li>
                    <p>Placed Order</p>
                    @Html.DisplayFor(model => model.PlacedOrder, new { @class = "gen-ftb" })
                </li>

              
                <li>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.MealAdID }, new { @class = "menu-14u" }) |
                    @Html.ActionLink("Back to List", "Index", new { userID = WebSecurity.CurrentUserId }, new { @class = "menu-14u" })
                </li>
                <div class="clr"></div>
            </ul>


        </div>
        <div class="clr"></div>

    </div>

</div>

