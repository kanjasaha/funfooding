@model MealsToGo.ViewModels.NetworkViewModel

@{
    ViewBag.Title = "Index";
    
}
<div class="cont-main">
    <h1>Your Network</h1>
    <div class="cont">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td height="30" align="right" valign="top"><span class="normal-12">
                    @Html.ActionLink("Connect", "Invite", "User", routeValues: new { userID = WebSecurity.CurrentUserId }, htmlAttributes: new { @class = "menu-14u" })</span></td>
            </tr>
            
            <tr>
                <td>
                    @if (Model.Contacts.Count() == 0)
                    {  <p>Invite your family and friends to your inner circle</p>}
                    else
                    {
                        <h3>Requests Pending</h3>
                        <table width="100%" border="1" cellpadding="0" cellspacing="0" bordercolor="#c6c3c3" style="border-collapse: collapse;">
                            
                            <tr>
                                <td width="15%" height="30" bgcolor="#EFEFEF" class="normal-12"><strong>EmailAddress</strong></td>
                                 <td width="15%" height="30" bgcolor="#EFEFEF" class="normal-12"><strong>Status</strong></td>
                                         </tr>
                            @foreach (var item in Model.Contacts)
                            {
                                <tr>
                                     
                                    <td class="normal-14">@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                                    
                                    <td height="35" class="normal-14">

                                     
                                         @if ((item.Accepted == null) && (item.Sender == 0))
                                        { @Html.ActionLink("Accept","AcceptRequest", "Contact", new {  RecipientUserID=item.RecipientUserID,SenderUserID=item.SenderUserID  }, new { @class = "submit7" })}
                                          @if ((item.Accepted == null) && (item.Sender == 1))
                                          { <strong>Request Sent</strong>}
                                                                                                                                                             
                                       
                                      
                                     
                                    </td>
                                </tr>
                            }

                        </table>
                    }
                </td>
            </tr>

              <tr>
                <td>
                    <h3>Your Inner Circle </h3>
                    <p> You have invited them to join you at Funfooding or they have invited you.</p>
                    @if (Model.InnerCircleContacts.Count() == 0)
                    {  }
                    else
                   {
                        
                        
                         <table width="100%" border="1" cellpadding="0" cellspacing="0" bordercolor="#c6c3c3" style="border-collapse: collapse;">
                            
                            <tr>
                                <td width="15%" height="30" bgcolor="#EFEFEF" class="normal-12"><strong>EmailAddress</strong></td>
                                 <td width="15%" height="30" bgcolor="#EFEFEF" class="normal-12"><strong>Status</strong></td>
                                         </tr>
                            @foreach (var item in Model.InnerCircleContacts)
                            {
                                <tr>
                                     
                                    <td class="normal-14">@Html.DisplayFor(modelItem => item.Name)</td>
                                    
                                    <td height="35" class="normal-14">

                                     
                                         @if (item.SharesFood == 1)
                                         { <span>Shares Food</span> }
                                         @if (item.BoughtFoodFromUser == 1)
                                         {<span>Bought Food From User</span> }
                                         @if (item.SoldFoodToUser == 1)
                                         {<span>Sold Food To User</span> }
                                                                                                                                                             
                                       
                                      
                                     
                                    </td>
                                </tr>
                            }

                        </table>
                        
                    }
                </td>
            </tr>

              <tr>
                <td><h3>Your Outer Circle </h3>
                    <p>Find your friends connections who shares food</p>
                    @if (Model.OuterCircleContacts.Count() == 0)
                    { }
                    else
                  {
                        
                        <table width="100%" border="1" cellpadding="0" cellspacing="0" bordercolor="#c6c3c3" style="border-collapse: collapse;">
                            
                            <tr>
                                <td width="15%" height="30" bgcolor="#EFEFEF" class="normal-12"><strong>EmailAddress</strong></td>
                                 <td width="15%" height="30" bgcolor="#EFEFEF" class="normal-12"><strong>Status</strong></td>
                                         </tr>
                            @foreach (var item in Model.OuterCircleContacts)
                            {
                                <tr>
                                     
                                    <td class="normal-14">@Html.DisplayFor(modelItem => item.Name)</td>
                                    
                                    <td height="35" class="normal-14">

                                     
                                         @if (item.BoughtFoodFromUser == 1)
                                         {<span>Bought Food From User</span> }
                                         @if (item.SoldFoodToUser == 1)
                                         {<span>Sold Food To User</span> }
                                                                                                                                                             
                                       
                                      
                                     
                                    </td>
                                </tr>
                            }

                        </table>
                    }
                </td>
            </tr>

            <tr>
                <td> <h3>Your Food Circle</h3>
                    <p>Here you find people with you have exchanged food</p>
                    @if (Model.FoodCircleContacts.Count() == 0)
                    { }
                    else
                  {
                       
                         <table width="100%" border="1" cellpadding="0" cellspacing="0" bordercolor="#c6c3c3" style="border-collapse: collapse;">
                            
                            <tr>
                                <td width="15%" height="30" bgcolor="#EFEFEF" class="normal-12"><strong>EmailAddress</strong></td>
                                 <td width="15%" height="30" bgcolor="#EFEFEF" class="normal-12"><strong>Status</strong></td>
                                         </tr>
                            @foreach (var item in Model.FoodCircleContacts)
                            {
                                <tr>
                                     
                                    <td class="normal-14">@Html.DisplayFor(modelItem => item.Name)</td>
                                    
                                    <td height="35" class="normal-14">

                                      @if (item.BoughtFoodFromUser == 1)
                                         {<span>Bought Food From User</span> }
                                         @if (item.SoldFoodToUser == 1)
                                         {<span>Sold Food To User</span> }                                                                         
                                       
                                      
                                     
                                    </td>
                                </tr>
                            }

                        </table>
                       
                    }
                </td>
            </tr>
        </table>
        <div class="clr"></div>

    </div>
</div>
